<!doctype html>
<html lang="en">
	<head>
		<title>Wedding Quiz</title>
		<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
		<script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
	</head>
	<body>
		<div><%= question.q %>
		</div>
		<div class="pure-g wq-answers">
		    <div class="pure-u-1-2" data-answer="0"><%= question.o[0] %></div>
		    <div class="pure-u-1-2" data-answer="1"><%= question.o[1] %></div>
		</div>
		<div class="pure-g wq-answers">
			<div class="pure-u-1-2" data-answer="2"><%= question.o[2] %></div>
		    <div class="pure-u-1-2" data-answer="3"><%= question.o[3] %></div>
		</div>
		
		<script>
			var GAME_ID = <%= gameId %>;
			$('#answer').on('click', function() {
				// Tell the server I answered a qestion
				$.get('/' + GAME_ID + "/answer");
			})
		</script>
	</body>
</html>
